@model WebAppMVC.ViewModels.PostFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Post</h2>
@using (Html.BeginForm("Create", "Posts"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Text)
        @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categorie)
        @Html.DropDownListFor(m => m.Categorie, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>



}

